{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <!-- Principal Content Start -->
    <div id="registro">
        <div class="container">
            <div class="col-xs-12 col-sm-8 col-sm-push-2">
                <h1>REGISTRO</h1>
                <hr>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-xs-12">
                            {{ form(formulario) }}
                        </div>
                    </div>
                </div>
                <hr class="divider">
                {% for message in app.flashes('exito') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Principal Content End -->
{% endblock %}
